{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

<div>
    <h1>Liste des produits</h1>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th>NÂ°</th>
                <th>Name</th>
                <th>Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {%for product in products%}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{product.name}}</td>
